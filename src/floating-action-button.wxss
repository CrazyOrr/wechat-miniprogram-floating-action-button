/* components/floating-action-button/floating-action-button.wxss */
.floating-action-button {
  --gap: 16px;

  position: fixed;
  bottom: var(--gap);
  right: var(--gap);
  z-index: 20;

  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;

  color: white;
  background-color: #07c160;
  opacity: 0.8;
  border-radius: 50%;
  box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);
}

.floating-action-button.hover {
  opacity: 0.4;
}
